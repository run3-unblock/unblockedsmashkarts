---
/** src/layouts/Layout.astro **/

// 1. Import global styles
import "../styles/global.css";

// 2. Props for per-page metadata
const { title, description, canonical } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Basic meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Dynamic per-page tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    {canonical && <link rel="canonical" href={canonical} />}

    <!-- Google site verification -->
    <meta name="google-site-verification" content="YOUR_CODE_HERE" />

    <!-- Favicons -->
    <link rel="icon" href="/favicon.ico" />
    <link rel="alternate icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/webp" sizes="96x96" href="/favicon-96x96.webp" />

    <!-- Apple Touch Icon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.webp" />

    <!-- PWA Manifest & theme color -->
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#10b981" />

    <!-- Open Graph & Twitter Card -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Smash Karts Unblocked" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content="https://unblockedsmashkarts.com/og-image.webp" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://unblockedsmashkarts.com/og-image.webp" />

    <!-- Redirect any pages.dev host to your custom domain -->
    <script>
      (function() {
        if (
          typeof window !== "undefined" &&
          window.location.hostname === "unblockedsmashkarts.pages.dev"
        ) {
          const dest =
            "https://unblockedsmashkarts.com" +
            window.location.pathname +
            window.location.search +
            window.location.hash;
          window.location.replace(dest);
        }
      })();
    </script>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-2NBYTGR4PV"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-2NBYTGR4PV');
    </script>
  </head>

  <body class="min-h-screen bg-white dark:bg-gray-900 dark:text-gray-100 transition-colors duration-200">
    <!-- Navbar (injected by page) -->
    <slot name="navbar" />

    <!-- Main page content -->
    <main class="min-h-screen">
      <slot />
    </main>

    <!-- Footer (injected by page) -->
    <slot name="footer" />
  </body>
</html>
