---
import Layout from '../layouts/Layout.astro';
import Navbar  from '../components/Navbar.astro';
import Footer  from '../components/Footer.astro';

/* ─── SEO constants ───────────────────────────────────── */
const title       = 'Smash Karts Unblocked Guide – Play at School & Chromebook';
const description = 'Step-by-step guide to unblock Smash Karts on school Wi-Fi and Chromebooks, change DNS, use mirror links, install as PWA, and play ad-free in fullscreen.';
const canonical   = 'https://unblockedsmashkarts.com/guide';

const breadcrumbLd = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    { "@type": "ListItem", position: 1, name: "Home",  item: "https://unblockedsmashkarts.com/" },
    { "@type": "ListItem", position: 2, name: "Guide", item: canonical }
  ]
};
---
<Layout {title} {description} {canonical} {breadcrumbLd}>
  <Navbar slot="navbar" />

  <main class="container mx-auto py-12 px-4 bg-gray-50 dark:bg-gray-900 min-h-screen">

    <div class="max-w-3xl w-full bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8 mx-auto">

      <!-- H1 with subtle brand colours -->
      <h1 class="text-4xl font-extrabold text-center leading-tight mb-6">
        <span class="text-emerald-600 dark:text-emerald-400">How&nbsp;to&nbsp;Play</span> 
        <span class="text-yellow-500 dark:text-yellow-300">Smash&nbsp;Karts</span> 
        <span class="text-emerald-600 dark:text-emerald-400">Unblocked</span>
      </h1>

      <!-- Intro paragraph for extra keyword context -->
      <p class="text-lg text-gray-700 dark:text-gray-200 mb-8 text-center">
        Follow this quick guide to launch <strong>Smash&nbsp;Karts Unblocked</strong> on any network—from locked-down
        classroom Wi-Fi to work laptops and Chromebooks—without ads, installs or admin rights.
      </p>

      <!-- Step-by-step list -->
      <ol class="list-decimal list-inside space-y-4 text-gray-800 dark:text-gray-200">
        <li>
          <strong>Open our secure URL:</strong>&nbsp;
          <a href="https://unblockedsmashkarts.com" class="text-emerald-600 dark:text-emerald-400 underline" target="_blank" rel="noopener">
            unblockedsmashkarts.com
          </a>
        </li>

        <li>
          <strong>Switch DNS if blocked:</strong> set
          <code class="bg-gray-100 dark:bg-gray-700 px-1 rounded">1.1.1.1</code>&nbsp;/&nbsp;
          <code class="bg-gray-100 dark:bg-gray-700 px-1 rounded">8.8.8.8</code> on your device to bypass school filters.
        </li>

        <li>
          <strong>Try our mirror build:</strong> still no luck? launch the
          <a href="https://webgltest-17af1.firebaseapp.com/" class="text-emerald-600 dark:text-emerald-400 underline" target="_blank" rel="noopener">
            WebGL mirror
          </a>
          directly.
        </li>

        <li>
          <strong>Install as a PWA:</strong> on Chrome or Edge, click the “Install app” icon to pin Smash&nbsp;Karts to your home screen for offline-style play.
        </li>

        <li>
          <strong>Go fullscreen:</strong> tap the “Fullscreen” button below the game frame (or press
          <kbd class="bg-gray-100 dark:bg-gray-700 px-1 rounded">F11</kbd>) for an immersive view.
        </li>

        <li>
          <strong>Dark mode comfort:</strong> flip the theme switch in the navbar to cut glare during long sessions.
        </li>
      </ol>

      <p class="mt-8 text-center italic text-gray-600 dark:text-gray-400">
        Last updated&nbsp;·&nbsp;May&nbsp;18,&nbsp;2025
      </p>
    </div>

  </main>

  <Footer slot="footer" />
</Layout>
