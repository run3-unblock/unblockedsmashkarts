---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const title       = 'Contact Us — Smash Karts Unblocked';
const description = 'Get in touch with the Smash Karts Unblocked team for feedback, support, or partnership inquiries.';
const canonical   = 'https://unblockedsmashkarts.com/contact-us';
---
<Layout {title} {description} {canonical}>
  <Navbar slot="navbar" />

  <!--
    You can adjust the vertical position by changing the `pt-24`
    (padding-top) utility to a smaller (e.g. pt-16, pt-12) or larger value.
  -->
  <main class="min-h-screen bg-gray-50 dark:bg-gray-900 text-gray-800 dark:text-gray-200 flex items-start justify-center pt-24 px-4">
    <div class="max-w-2xl w-full bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-10">
      <h1 class="text-4xl font-extrabold text-emerald-700 dark:text-emerald-400 mb-6 text-center">
        Contact Us
      </h1>
      <p class="mb-4 text-center">
        Have questions or feedback? We’d love to hear from you! Please email us at:
      </p>
      <p class="mb-6 text-center">
        <a
          href="mailto:contact@unblockedsmashkarts.com"
          class="text-lg font-medium text-emerald-600 dark:text-emerald-300 underline"
        >
          contact@unblockedsmashkarts.com
        </a>
      </p>
      <p class="text-center">
        We aim to respond within 48 hours. For bug reports, please include
        details of your device, browser, and any error messages.
      </p>
    </div>
  </main>

  <Footer slot="footer" />
</Layout>
