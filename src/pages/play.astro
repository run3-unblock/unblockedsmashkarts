---
import Layout from '../layouts/Layout.astro';
import Navbar  from '../components/Navbar.astro';
import Footer  from '../components/Footer.astro';

/* ─── SEO constants ─────────────────────────────────────── */
const title       = 'Smash Karts Unblocked – Free Online Multiplayer Kart Battles';   // 60 chars
const description = 'Play Smash Karts Unblocked free—no ads, no downloads. Race, drift, blast rivals in fast 3-minute arenas on school Wi-Fi, Chromebooks or mobile.'; // 155 chars
const canonical   = 'https://unblockedsmashkarts.com/play';

const breadcrumbLd = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    { "@type": "ListItem", position: 1, name: "Home", item: "https://unblockedsmashkarts.com/" },
    { "@type": "ListItem", position: 2, name: "Play", item: canonical }
  ]
};
---
<Layout {title} {description} {canonical} {breadcrumbLd}>
  <Navbar slot="navbar" />

  <main class="container mx-auto px-4 py-12 bg-gray-50 dark:bg-gray-900 min-h-screen">

    <!-- H1 (kept above the game frame, now with subtle color accents) -->
    <h1 class="text-4xl md:text-5xl font-extrabold text-center leading-tight mb-6
               text-gray-900 dark:text-gray-100">
      <span class="text-emerald-600 dark:text-emerald-400">Play</span>&nbsp;
      <span class="text-yellow-500 dark:text-yellow-400">Smash Karts</span>&nbsp;
      <span class="text-emerald-600 dark:text-emerald-400">Unblocked</span>
    </h1>

<!-- Responsive wrapper: keeps the game at its native 16 : 9 aspect ratio
     and expands up to a comfortable desktop width -->
<div class="flex justify-center">
  <div class="w-full max-w-5xl aspect-video border-4 border-emerald-500 rounded-xl overflow-hidden shadow-lg">
    <iframe
      id="smashkarts-frame"
      src="https://webgltest-17af1.firebaseapp.com/"
      title="Smash Karts Unblocked Game"
      class="w-full h-full block bg-black"
      allow="autoplay; fullscreen"
      allowfullscreen
      loading="lazy">
    </iframe>
  </div>
</div>

    <!-- Full-screen button (unchanged) -->
    <div class="flex justify-center mt-5">
      <button
        type="button"
        onclick="document.getElementById('smashkarts-frame')?.requestFullscreen?.()"
        class="inline-flex items-center bg-gradient-to-r from-emerald-400 to-emerald-600 hover:from-emerald-500 hover:to-emerald-700
               text-white font-semibold py-2 px-6 rounded-lg shadow-lg transform hover:scale-105 transition-transform duration-200"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round"
                d="M8 3H5a2 2 0 00-2 2v3m0 8v3a2 2 0 002 2h3m8-16h3a2 2 0 012 2v3m0 8v3a2 2 0 01-2 2h-3" />
        </svg>
        <span class="ml-2">Fullscreen</span>
      </button>
    </div>

    <!-- Extra SEO-rich content placed below the button -->
    <p class="mt-10 max-w-3xl mx-auto text-lg text-center text-gray-700 dark:text-gray-200">
      Drive, drift and detonate! <strong>Smash Karts Unblocked</strong> throws you into rapid 3-minute arenas
      where rockets fly, mines pop and only the quickest survive. 100&nbsp;% free, ad-free and install-free—
      play instantly on school Wi-Fi, Chromebooks, phones or desktop.
    </p>

    <ul class="mt-8 grid gap-4 md:grid-cols-3 max-w-4xl mx-auto text-sm md:text-base
              text-gray-800 dark:text-gray-100">
      <li><strong>Controls:</strong> Arrow/WASD to drive · Space to fire</li>
      <li><strong>Rounds:</strong> Fast 3-minute deathmatches</li>
      <li><strong>Unlocks:</strong> 50&nbsp;+ karts, hats &amp; skins</li>
    </ul>

  </main>

  <Footer slot="footer" />
</Layout>
